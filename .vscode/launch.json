{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "appDirname",
      "type": "promptString",
      "description": "Enter an app dirname from examples or test/e2e",
      "default": "examples/hello-world"
    },
    {
      "id": "nexCommand",
      "type": "pickString",
      "description": "Select the nex command",
      "options": ["dev", "build", "start"],
      "default": "dev"
    },
    {
      "id": "nexTestMode",
      "type": "pickString",
      "description": "Select the nex test mode",
      "options": ["dev", "start"],
      "default": "dev"
    }
  ],
  "configurations": [
    {
      "name": "Launch app",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "packages/nex/dist/bin/nex",
        "${input:nexCommand}",
        "${input:appDirname}"
      ],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/${input:appDirname}/*",
        "webpack://_N_E/[.]/(app|pages)/(.*)": "${workspaceFolder}/${input:appDirname}/$1/$2",
        "webpack://_N_E/[.]/(.*)": "${workspaceFolder}/${input:appDirname}/.nex/server/$1",
        "webpack-internal:///(ssr)/./*": "${workspaceFolder}/${input:appDirname}/*",
        "webpack://(?:_N_E)?/(?:../)*src/(.*)": "${workspaceFolder}/packages/nex/src/$1",
        "webpack://nex/./dist/src/*": "${workspaceFolder}/packages/nex/src/*",
        "webpack://nex/./dist/compiled/*": "${workspaceFolder}/packages/nex/src/compiled/*",
        "webpack:///(?:../)*packages/nex/dist/compiled/(.*)": "${workspaceFolder}/packages/nex/src/compiled/$1",
        "webpack://nex/./src/*": "${workspaceFolder}/packages/nex/src/*",
        "webpack-internal:///\\(rsc\\)/(?:../)*packages/nex/dist/(.*)": "${workspaceFolder}/packages/nex/src/$1",
        "turbopack://[project]/*": "${workspaceFolder}/*"
      },
      "env": {
        // Enable the following environment variables to use turbopack instead of webpack:
        // "TURBOPACK": "1",
        // "TURBOPACK_DEV": "1",
        // "TURBOPACK_BUILD": "1",
        "NEX_PRIVATE_LOCAL_WEBPACK": "1",
        "NEX_PRIVATE_SKIP_CANARY_CHECK": "1",
        "NEX_TELEMETRY_DISABLED": "1"
      }
    },
    {
      "name": "Launch current directory",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "packages/nex/dist/bin/nex",
        "${input:nexCommand}",
        "${fileDirname}"
      ],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/${fileDirname}/*",
        "webpack://_N_E/[.]/(app|pages)/(.*)": "${workspaceFolder}/${fileDirname}/$1/$2",
        "webpack://_N_E/[.]/(.*)": "${workspaceFolder}/${fileDirname}/.nex/server/$1",
        "webpack-internal:///(ssr)/./*": "${workspaceFolder}/${fileDirname}/*",
        "webpack://(?:_N_E)?/(?:../)*src/(.*)": "${workspaceFolder}/packages/nex/src/$1",
        "webpack://nex/./dist/src/*": "${workspaceFolder}/packages/nex/src/*",
        "webpack://nex/./dist/compiled/*": "${workspaceFolder}/packages/nex/src/compiled/*",
        "webpack:///(?:../)*packages/nex/dist/compiled/(.*)": "${workspaceFolder}/packages/nex/src/compiled/$1",
        "webpack://nex/./src/*": "${workspaceFolder}/packages/nex/src/*",
        "webpack-internal:///\\(rsc\\)/(?:../)*packages/nex/dist/(.*)": "${workspaceFolder}/packages/nex/src/$1",
        "turbopack://[project]/*": "${workspaceFolder}/*"
      },
      "env": {
        "NEX_PRIVATE_LOCAL_WEBPACK": "1",
        "NEX_PRIVATE_SKIP_CANARY_CHECK": "1",
        "NEX_TELEMETRY_DISABLED": "1"
      }
    },
    {
      "name": "Run e2e test",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--runInBand", "--verbose", "${file}"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/${fileDirname}/*",
        "webpack://_N_E/[.]/(app|pages)/(.*)": "${workspaceFolder}/${fileDirname}/$1/$2",
        "webpack://_N_E/[.]/(.*)": "${workspaceFolder}/${fileDirname}/.nex/server/$1",
        "webpack-internal:///(ssr)/./*": "${workspaceFolder}/${fileDirname}/*",
        "webpack://(?:_N_E)?/(?:../)*src/(.*)": "${workspaceFolder}/packages/nex/src/$1",
        "webpack://nex/./dist/src/*": "${workspaceFolder}/packages/nex/src/*",
        "webpack://nex/./dist/compiled/*": "${workspaceFolder}/packages/nex/src/compiled/*",
        "webpack:///(?:../)*packages/nex/dist/compiled/(.*)": "${workspaceFolder}/packages/nex/src/compiled/$1",
        "webpack://nex/./src/*": "${workspaceFolder}/packages/nex/src/*",
        "webpack-internal:///\\(rsc\\)/(?:../)*packages/nex/dist/(.*)": "${workspaceFolder}/packages/nex/src/$1",
        "turbopack://[project]/*": "${workspaceFolder}/*"
      },
      "env": {
        "HEADLESS": "true",
        "NEX_E2E_TEST_TIMEOUT": "1000000",
        "NEX_SKIP_ISOLATE": "1",
        "NEX_TEST_MODE": "${input:nexTestMode}"
      }
    },
    {
      "name": "Launch app build trace jaeger",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["clean-trace-jaeger"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NEX_PRIVATE_LOCAL_WEBPACK": "1"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to existing debugger",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NEX_PRIVATE_LOCAL_WEBPACK": "1"
      }
    }
  ]
}
